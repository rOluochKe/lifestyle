<%= form_for @article do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, size: "10x1", class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_area :content, size: "10x5", class: "form-control" %>

  <%= f.label :upload_your_profile_picture %><br />
  <%= f.file_field :image, class:"form-control", accept: 'image/jpeg,image/gif,image/png'  %>

  <%= f.select :category_id, Category.all.map {|c| [c.category, c.id]} %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>


<script type="text/javascript">
  document.getElementById('user_image').addEventListener('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 1) {
      alert('Maximum file size is 1 MB. Please choose a smaller file.');
    }
  });
</script>