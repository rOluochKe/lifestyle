<%= form_for @comment = Comment.new do |f| %>
  <%= render "devise/shared/error_messages", resource: @comment %>
  <%= f.hidden_field :article_id, :value => object.id %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control text-comment" %><br/>

  <%= f.submit("Comment", class: "btn btn-primary btn-comment" ) %>
<% end %>

