<!-- Modal -->
<div class="modal fade" id="noticeModal" tabindex="-1" role="dialog" aria-labelledby="noticeModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="noticeModalLabel">Notifications <%= current_user.notifications.count%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% object.each do |n|%>
          <!-- If Notification type is a comment -->
          <% if n.notice_type == "comment"%>
            <%= link_to article_path(notification_find(n, 'comment')) do %>
               Someone commented on your article
            <% end %>
          <% end %>
          <!-- If Notification type is a voted article -->
          <% if n.notice_type == "vote-article"%>
            <%= link_to article_path(notification_find(n, 'vote-article')) do %>
               Someone voted your article
            <% end %>
          <% end %>
          <!-- If Notification type is a voted comment -->
          <% if n.notice_type == "vote-comment"%>
            <%= link_to article_path(notification_find(n, 'vote-comment')) do %>
               Someone voted your comment under this article
            <% end %>
          <% end %>          
          <br>
        <% end %>
      </div>
      <!-- <div class="modal-footer">
      </div> -->
    </div>
  </div>
</div>