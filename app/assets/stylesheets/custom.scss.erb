html, body {
  height: 100%;
  margin: 0;
}

.container-fluid.main, .main.container-sm, .main.container-md, .main.container-lg, .main.container-xl {
  min-height: 100% !important;
  margin-bottom: -50px !important;
}

body {
  font-family: 'Poppins', sans-serif;
  font-size: 15px;
  font-weight: 400;
  color: #3b4246;
  max-width: 100%;
  overflow-x: hidden;
}

h1, h2, h3, h4, h5, h6 {
  color: #000;
  font-weight: 700;
}

h2 {
  font-size: 26px;
  line-height: 30px;
}

h3 {
  font-size: 18px;
  line-height: 22px;
}

.comments-title {
  margin-left: 15px;
}

small, .article-title, a {
  color: #f89c30;
}

a:hover, a:active, a:focus {
  color: blue;
  text-decoration: none;
}

.weather-image {
  background-image: url(<%= asset_path('weather') %>);
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
}

.between-cat-content {
  margin-bottom: -32px;
}

.img-bg-fix {
  background-position: center center;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 470px;
}
